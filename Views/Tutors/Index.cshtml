@model IEnumerable<Tutorias.Models.Tutor>

@{
    ViewData["Title"] = "Index";
}

<h2>Tutores</h2>

<div class="row">
    <div class="col-6">
        <form asp-action="Index" method="get">
            <div class="form-actions no-color">
                <p>Buscar por nombre: <input class="ml-2" type="text" name="SearchString"
                        value="@ViewData["CurrentFilter"]" />
                    <input type="submit" value="Search" class="btn btn-outline-dark" />
                </p>
            </div>
        </form>
    </div>

    <div class="col-3">
        <div class="dropdown">
            <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink"
                data-bs-toggle="dropdown" aria-expanded="false">
                Ordenar por
            </a>

            <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                <li><a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]">Nombre</a></li>
                <li><a asp-action="Index" asp-route-sortOrder="@ViewData["ScoreSortParm"]">Puntuaci√≥n</a></li>
            </ul>
        </div>



    </div>

</div>

<div class="d-flex justify-content-around flex-wrap align-items-baseline">



    @foreach (var tutor in Model)
    {
        <div class="card border-secondary text-center mt-2 mb-3" style="width: 22rem; margin: 15px;">
            <img class="card-img-top img-fluid" style="border-radius: 50%; padding:15px; " src="/Images/DefaultPicture.png"
            alt="Foto @tutor.Name" width="300px" height="300px">
            <div class="card-body">
                <h4 class="card-title">@tutor.Name</h4>
                <p class="card-text">@tutor.Description</p>
            </div>
            <ul class="list-group list-group-flush">
                @if (tutor.AverageScore != null)
                {
                    <li class="list-group-item">@tutor.AverageScore</li>
                }
                else
                {
                    <li class="list-group-item">No hay calificaciones</li>
                }
                <li class="list-group-item">A second item</li>
                <li class="list-group-item">A third item</li>
            </ul>
            <div class="card-body">
                <a class="btn btn-primary" asp-route-id="@tutor.ID" asp-action="Details" role="button">Ver Perfil</a>
            </div>
        </div>
    }
</div>